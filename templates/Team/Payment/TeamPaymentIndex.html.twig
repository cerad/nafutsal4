{# @CeradTeam/Team/Register/TeamRegisterIndex.html.twig #}
{% extends 'layout.html.twig' %}

{% block content %}
<style>
/*.paypal-button button::after { content: "**"; }*/
  .button::after { content: "**"; }
</style>

<h3 style="margin: 0px;">Step 2 - Confirm Information</h3>
<table border="1">
<tr><td>Team Info</td><td>{{ team.teamDivision }} {{ team.teamName }}</td></tr>
<tr><td>Point of Contact</td><td>{{ team.nameFirst }} {{ team.nameLast }}</td></tr>
<tr><td>Email</td><td>{{ team.email }}</td></tr>
<tr><td colspan="2"></td></tr>
{# <tr><td>Base Amount</td><td>{{ fee }}</td></tr>
<tr><td>Debit/Credit Card Usage Fee</td><td>{{ upLift }}</td></tr>#}
<tr><td>Total Amount*</td><td>{{ total }}</td></tr>
<tr><td colspan="2"><a href="{{ path('cerad_team_register', { 'id': team.id }) }}">Change Team Information</a></td></tr>
</table>
{% set sandbox = false %}
{% if  sandbox %}
<script 
    data-env="sandbox"
  {#data-callback="{{ url('cerad_paypal_callback') }}" #}
    data-tax="0" 
    data-shipping="0" 
  {#data-amount="{{ total }}" #}
    data-amount="1.03" 
    data-quantity="1" 
    data-name="Team Registration {{ team.teamDivision }} {{ team.teamName }} {{ team.nameFirst }} {{ team.nameLast }}"
    data-button="buynow" 
    data-custom="My custom information"
    data-return="http://www.nafutsal.org/index_files/Page12699.htm"
    src="/js/paypal-button.min.js?merchant=ahundiak-facilitator@nasoa.org"
></script>
<h3>Sandbox</h3>
{% else %} {# NOT in sandbox #}
<br />
<script 
    data-tax="0" 
    data-shipping="0" 
    data-amount="{{ total }}"
    data-quantity="1" 
    data-name="Team Registration {{ team.teamDivision }} {{ team.teamName }} {{ team.nameFirst }} {{ team.nameLast }}"
    data-button="buynow" 
    data-custom="My custom information"
    src="/js/paypal-button.min.js?merchant=KDTT4D89UN6DN"
></script>
{%endif %}
<p style="width: 400px; font-size: 80%">
* NOTE: 
The above Total Amount includes the debit/credit card usage fee. After you click  
Buy Now and complete the payment, the debit/credit card usage fee of ${{ upLift }} <strong>is not refundable</strong>.
</p>
<p style="width: 400px; font-size: 80%">
** NOTE:
By clicking <strong>Buy Now</strong> you agree to the North Alabama <em>FUTSALâ€™s</em> 
<a href="http://www.nafutsal.org/registration/NAFUTSAL_Terms.pdf" target="_blank">
Terms and Conditions</a> for participation in North Alabama <em>FUTSAL</em> activities.
</p>
{% endblock %}
